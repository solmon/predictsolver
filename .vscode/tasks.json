{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Sample App",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "${workspaceFolder}/apps/sample_app.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "uv",
            "args": [
                "pip",
                "install",
                "-r",
                "${workspaceFolder}/requirements.txt"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Core Package in Dev Mode",
            "type": "shell",
            "command": "cd ${workspaceFolder}/core && uv pip install -e .",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
